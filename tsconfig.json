{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node",
      "vite/client",
      "vite-plugin-svgr/client",
    ],
    "allowJs": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
    },
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "src/components/MechanicalMetronome",
    "_no-commit/context"
  ]
}